<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <rotate android:fromDegrees="225"
                    android:pivotY="100%"
                    android:pivotX="40%">
                    <shape android:shape="rectangle">
                        <solid android:color="#7986CB"/>
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate android:fromDegrees="225"
                    android:pivotX="60%"
                    android:pivotY="0%"
                    >
                    <shape android:shape="rectangle">
                        <solid android:color="#FFECB3"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>