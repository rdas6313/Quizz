<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_drawable">
    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_white_48dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/logoStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.497"
        android:id="@+id/textView" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        style="@style/ediTextStyle"
        android:background="@drawable/edit_text_background"
        android:hint="Current Password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_passowrd"
        style="@style/ediTextStyle"
        android:background="@drawable/edit_text_background"
        android:hint="New Password"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_password"
        style="@style/ediTextStyle"
        android:background="@drawable/edit_text_background"
        android:hint="Re-type New Password"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/new_passowrd"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/new_passowrd"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/new_passowrd" />


    <Button
        style="@style/ediTextStyle"
        android:background="@drawable/btn_background"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:id="@+id/done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/confirm_password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/confirm_password" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAlignment="center"
        android:text="@string/password_change_note"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/textView2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</android.support.constraint.ConstraintLayout>