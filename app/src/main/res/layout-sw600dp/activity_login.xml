<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/coordinatorLayout"
    android:orientation="vertical"
    android:background="@drawable/background_drawable"
    android:layout_height="match_parent"
    tools:context="com.example.rdas6313.quizz.SignUpActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/logoStyle"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:id="@+id/textView8" />
        <EditText

            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_email_black_48dp"
            android:background="@drawable/edit_text_background"
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/ediTextStyle"
            android:hint="@string/emailHint"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />
        <EditText
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_https_black_48dp"
            style="@style/ediTextStyle"
            android:background="@drawable/edit_text_background"
            android:id="@+id/password"
            android:hint="@string/passwordHint"
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/email"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/email"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email" />
        <TextView
            android:background="@drawable/text_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPassword"
            android:text="@string/forgot_password"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/password"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/password" />
        <Button
            style="@style/ediTextStyle"
            android:background="@drawable/btn_background"
            android:textColor="@android:color/white"
            android:visibility="visible"
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/password"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/password"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/forgotPassword" />
        <TextView
            android:background="@drawable/text_background"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/create_an_account"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/login"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/login"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:layout_constraintHorizontal_bias="0.493" />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
