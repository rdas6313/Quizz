<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/NoActionBarPrimaryColor</item>
        <item name="colorPrimaryDark">@color/NoActionBarDarkPrimaryColor</item>
        <item name="colorAccent">@color/NoActionBarAccentColor</item>
    </style>

    <style name="ediTextStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:padding">32dp</item>
    </style>
    <style name="logoStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">112dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:textSize">128sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/app_name</item>
    </style>

</resources>

